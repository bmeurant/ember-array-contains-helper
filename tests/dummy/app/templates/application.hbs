    <div class="sample">
      <h3>Comics List (With Ember Data): </h3>
      {{#paper-list class="comics"}}
        {{#each model.comics as |comic|}}
          {{#paper-item}}{{comic.title}}{{/paper-item}}
        {{/each}}
      {{/paper-list}}

      {{#paper-list class="results"}}
        {{#paper-item}}
          List contains 'Akira' :
          <strong class="{{if (array-contains model.comics 'Akira' property='title') 'contains-true' 'contains-false'}}">
            {{array-contains model.comics 'Akira' property='title'}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Blacksad' :
          <strong class="{{if (array-contains model.comics 'Blacksad' property='title') 'contains-true' 'contains-false'}}">
            {{array-contains model.comics 'Blacksad' property='title'}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Calvin And Hobbes' *:
          <strong class="{{if (array-contains model.comics calvinAndHobbes) 'contains-true' 'contains-false'}}">
            {{array-contains model.comics calvinAndHobbes}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Blueberry' :
          <strong class="{{if (array-contains model.comics 'Blueberry' property='title') 'contains-true' 'contains-false'}}">
            {{array-contains model.comics 'Blueberry' property='title'}}
          </strong>
        {{/paper-item}}
        <small><i>* There is no strict equality between ember-data models returned from store</i></small>
      {{/paper-list}}

      {{code-snippet name="data.hbs" class="snippet"}}
    </div>
  </div>
{{/paper-content}}