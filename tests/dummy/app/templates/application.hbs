{{#paper-sidenav-container}}
  {{#paper-toolbar}}
    <div class="md-toolbar-tools">

      <div class="brand">
        <img src="https://s3.amazonaws.com/dgw-public/ember-logo-white.png" class="logo"/>
        <h2 id="title">Array Contains Helper Demo</h2>
      </div>

      <div id="buttons">
        {{paper-button onClick=(action 'updateAkira') raised=true label="Remove/Add Akira"}}
        {{paper-button onClick=(action 'updateBlacksad') raised=true label="Change Blacksad title"}}
        {{paper-button onClick=(action 'updateBlueberry') raised=true label="Add/Remove Blueberry"}}
      </div>

      <a href="docs" class="docs">
        {{paper-icon "filter-none"}}
        docs
      </a>

      <a href="https://github.com/bmeurant/ember-array-contains-helper" class="sources">
        {{paper-icon "code"}}
        sources
      </a>

    </div>
  {{/paper-toolbar}}
{{/paper-sidenav-container}}

{{#paper-content}}
  <div class="samples">
    <div class="sample">
      <h3>Comics List (literals): </h3>
      {{#paper-list class="comics"}}
        {{#each model.comicsLiterals as |comic|}}
          {{#paper-item}}{{comic}}{{/paper-item}}
        {{/each}}
      {{/paper-list}}

      {{#paper-list class="results"}}
        {{#paper-item}}
          List contains 'Akira' :
          <strong class="{{if (array-contains model.comicsLiterals 'Akira') 'contains-true' 'contains-false'}}">
            {{array-contains model.comicsLiterals 'Akira'}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Blacksad' :
          <strong class="{{if (array-contains model.comicsLiterals 'Blacksad') 'contains-true' 'contains-false'}}">
            {{array-contains model.comicsLiterals 'Blacksad'}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Calvin And Hobbes' :
          <strong class="{{if (array-contains model.comicsLiterals calvinAndHobbesLiteral) 'contains-true' 'contains-false'}}">
            {{array-contains model.comicsLiterals calvinAndHobbesLiteral}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Blueberry' :
          <strong class="{{if (array-contains model.comicsLiterals 'Blueberry') 'contains-true' 'contains-false'}}">
            {{array-contains model.comicsLiterals 'Blueberry'}}
          </strong>
        {{/paper-item}}
      {{/paper-list}}

      {{code-snippet name="literal.hbs" class="snippet"}}
    </div>

    <div class="sample">
      <h3>Comics List (Native Objects): </h3>
      {{#paper-list class="comics"}}
