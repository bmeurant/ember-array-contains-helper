            {{array-contains model.comicsNative 'Akira' property='title'}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Blacksad' :
          <strong class="{{if (array-contains model.comicsNative 'Blacksad' property='title') 'contains-true' 'contains-false'}}">
            {{array-contains model.comicsNative 'Blacksad' property='title'}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Calvin And Hobbes' :
          <strong class="{{if (array-contains model.comicsNative calvinAndHobbesNative) 'contains-true' 'contains-false'}}">
            {{array-contains model.comicsNative calvinAndHobbesNative}}
          </strong>
        {{/paper-item}}
        {{#paper-item}}
          List contains 'Blueberry' :
          <strong class="{{if (array-contains model.comicsNative 'Blueberry' property='title') 'contains-true' 'contains-false'}}">
            {{array-contains model.comicsNative 'Blueberry' property='title'}}
          </strong>
        {{/paper-item}}
      {{/paper-list}}

      {{code-snippet name="native.hbs" class="snippet"}}
    </div>

